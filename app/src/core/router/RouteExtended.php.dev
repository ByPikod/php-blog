<?php

namespace Core\Router;

/**
 * This class is a copy of the Route class from the core, but it exposes the middlewares property
 * unlike the original Route class. This is used in the RouteGroup class to extract the middlewares.
 * @see RouteGroup::extractRoutes()
 * @since 1.0.0
 */
class RouteExtended extends Route
{
    /**
     * Get route method
     * @return string Route method
     * @since 1.0.0
     */
    public function &__middlewares(): array
    {
        return $this->middlewares;
    }
}
