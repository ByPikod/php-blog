<?php

namespace Core\Router;

use Closure;

/**
 * Route class
 * @since 1.0.0
 */
class Route extends MiddlewareAddable
{
    private string $path = '';
    private Closure $callback;

    public function __construct($path, $callback)
    {
        $this->path = $path;
        $this->callback = $callback;
    }

    /**
     * Get route path
     * @return string Route path
     * @since 1.0.0
     */
    public function getPath(): string
    {
        return $this->path;
    }

    /**
     * Invokes the route callback
     * @return Closure Route callback
     * @since 1.0.0
     */
    public function __invoke(Context $ctx): void
    {
        if (!isset($this->callback)) throw new \Exception('Route callback is not set.');
        $fc = $this->callback;
        $fc($ctx);
    }
}
